{
  "kind": "collectionType",
  "collectionName": "hero_slides",
  "info": {
    "singularName": "hero-slide",
    "pluralName": "hero-slides",
    "displayName": "Hero Slide",
    "description": "Carousel items for the homepage hero section"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "titleLines": {
      "type": "component",
      "repeatable": true,
      "component": "shared.text-item"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "buttonLabel": {
      "type": "string",
      "required": true
    },
    "link": {
      "type": "string",
      "required": true
    },
    "rightSlogan": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
