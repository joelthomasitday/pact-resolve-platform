{
  "kind": "collectionType",
  "collectionName": "panel_members",
  "info": {
    "singularName": "panel-member",
    "pluralName": "panel-members",
    "displayName": "Panel Member",
    "description": "Team members and neutrals"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "bio": {
      "type": "text"
    },
    "profileUrl": {
      "type": "string"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
