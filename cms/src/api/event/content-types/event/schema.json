    "endDate": {
      "type": "datetime"
    },
    "location": {
      "type": "string"
    },
    "registrationLink": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
