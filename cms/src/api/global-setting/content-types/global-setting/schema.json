{
  "kind": "singleType",
  "collectionName": "global_settings",
  "info": {
    "singularName": "global-setting",
    "pluralName": "global-settings",
    "displayName": "Global Settings",
    "description": "Global contact and platform information"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "email": {
      "type": "email",
      "required": true
    },
    "whatsapp": {
      "type": "string",
      "required": true
    },
    "contactPersons": {
      "type": "component",
      "repeatable": true,
      "component": "shared.contact-person"
    },
    "address": {
      "type": "text",
      "required": true
    },
    "companyName": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
